<%= turbo_frame_tag "onboarding_step_1" do %>
<div data-controller="onboarding-form"
     data-onboarding-form-next-step-url-value="<%= tags_app_onboarding_path(@app) %>">

  <div data-onboarding-form-target="error" class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 hidden" role="alert"></div>

  <%= form_with model: @onboarding_state,
                url: save_branching_app_onboarding_path(@app),
                method: :post,
                data: {onboarding_form_target: "form"},
                class: "space-y-6" do |f| %>
  <div class="grid gap-6 mb-6">
    <div>
      <h3 class="text-xl font-semibold mb-4">Version Control & Branching Strategy</h3>
      <p class="text-sm text-gray-600 mb-4">Configure how Tramline will interact with your version control system.</p>
    </div>

    <div class="grid gap-4">
      <div>
        <%= f.label :branching_strategy, "Branching Strategy", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= f.select :branching_strategy,
                    [["GitFlow (main/develop)", "gitflow"],
                      ["GitHub Flow (main only)", "github_flow"],
                      ["Release Branches", "release_branches"]],
                    {include_blank: "Select a branching strategy"},
                    class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      </div>

      <div>
        <%= f.label :source_branch, "Source Branch", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= f.text_field :source_branch, placeholder: "main", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">The branch that contains your latest development code.</p>
      </div>

      <div>
        <%= f.label :branch_naming_format, "Feature Branch Format", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= f.text_field :branch_naming_format, placeholder: "feature/{feature}", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Format for feature branches. Use {feature} as a placeholder.</p>
      </div>

      <div>
        <%= f.label :release_branch_format, "Release Branch Format", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= f.text_field :release_branch_format, placeholder: "release/{version}", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Format for release branches. Use {version} as a placeholder.</p>
      </div>
    </div>
  </div>

  <div class="flex items-center space-x-4">
    <button type="submit"
            data-onboarding-form-target="submitButton"
            class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
      <span data-onboarding-form-target="spinner" class="inline-block animate-spin mr-2 hidden">
        <%= render IconComponent.new("circle_dashed.svg", size: :sm, classes: "animate-spin") %>
      </span>
      Save and Continue
    </button>
  </div>
  <% end %>
</div>
<% end %>
