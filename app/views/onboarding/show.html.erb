<div class="container mx-auto my-8 max-w-6xl">
  <h1 class="text-3xl font-bold mb-8">Set Up Your Release Process</h1>

  <!-- Flash messages container for Turbo Stream updates -->
  <div id="flash_messages"></div>

  <div id="onboarding_wizard">
    <%= render Onboarding::WizardComponent.new(current_step: @step, onboarding_state: @onboarding_state) do |wizard| %>
      <% wizard.with_step(title: "Version Strategy", description: "Configure how version numbers are generated and incremented") do %>
        <%= render(partial: "onboarding/version_form") %>
      <% end %>

      <% wizard.with_step(title: "Branching Strategy", description: "Set up your source control and branch naming convention") do %>
        <%= render(partial: "onboarding/branching_form") %>
      <% end %>

      <% wizard.with_step(title: "Release Tags", description: "Configure how releases are tagged in your repository") do %>
        <%= render(partial: "onboarding/tags_form") %>
      <% end %>

      <% wizard.with_step(title: "CI/CD Workflows", description: "Connect your build pipeline and configure workflows") do %>
        <%= render(partial: "onboarding/workflows_form") %>
      <% end %>

      <% wizard.with_step(title: "Release Features", description: "Configure automation features for your release cycle") do %>
        <%= render(partial: "onboarding/cycle_features_form") %>
      <% end %>

      <% wizard.with_step(title: "App Store Submissions", description: "Configure internal, beta, and production submission settings") do %>
        <%= render(partial: "onboarding/submissions_form") %>
      <% end %>
    <% end %>
  </div>
</div>
