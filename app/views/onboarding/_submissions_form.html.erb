<%= form_with model: @onboarding_state, url: save_submissions_app_onboarding_path(@app), method: :post, local: true, class: "space-y-6" do |f| %>
  <div class="grid gap-6 mb-6">
    <div>
      <h3 class="text-xl font-semibold mb-4">App Store Submissions</h3>
      <p class="text-sm text-gray-600 mb-4">Configure how your app is submitted to app stores.</p>
    </div>

    <div class="grid gap-4">
      <div class="p-4 mb-4 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-800 dark:border-gray-700">
        <h4 class="text-lg font-medium mb-2">Release Candidate Configuration</h4>

        <div class="flex items-center mb-4">
          <%= f.check_box :rc_submission_enabled, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
          <%= f.label :rc_submission_enabled, "Enable RC submissions", class: "ml-2 text-sm font-medium text-gray-900 dark:text-white" %>
        </div>

        <div class="pl-6">
          <%= f.label :rc_submission_provider, "RC Submission Provider", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.select :rc_submission_provider,
                      [["TestFlight (iOS)", "testflight"],
                        ["Firebase App Distribution (Android/iOS)", "firebase"],
                        ["Google Play Internal Testing (Android)", "google_play_internal"]],
                      {include_blank: "Select a provider"},
                      class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
      </div>

      <div class="p-4 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-800 dark:border-gray-700">
        <h4 class="text-lg font-medium mb-2">Production Release Configuration</h4>

        <div class="flex items-center mb-4">
          <%= f.check_box :production_submission_enabled, class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
          <%= f.label :production_submission_enabled, "Enable production submissions", class: "ml-2 text-sm font-medium text-gray-900 dark:text-white" %>
        </div>

        <div class="pl-6">
          <%= f.label :production_submission_provider, "Production Submission Provider", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.select :production_submission_provider,
                      [["App Store (iOS)", "app_store"],
                        ["Google Play Store (Android)", "google_play_store"]],
                      {include_blank: "Select a provider"},
                      class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex items-center space-x-4">
    <%= f.submit "Complete Setup", class: "text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800" %>
  </div>
<% end %>
